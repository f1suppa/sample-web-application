pipeline{
    agent any
    stages{
        stage("static code analysis"){
            agent {
                docker {
                    image 'maven'
                    sh "docker version" // DOCKER_CERT_PATH is automatically picked up by the Docker client

                }
            }
            steps{
                script {
                    withSonarQubeEnv(credentialsId: 'sonar-qube-token') {
                            sh "mvn sonar:sonar"
                    }
                }
            }
        }
    }
}
